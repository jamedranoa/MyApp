<form action="<%= perform_search_url %>" method="post" >
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="city">
    Where?
    <input type="text" name="search[city]" id="city">
  </label>

  <label for="in">
    Check in
    <input type="text" name="search[start_date]" class="datepicker">
  </label>

  <label for="out">
    Check out
    <input type="text" name="search[end_date]" id="out" class="datepicker">
  </label>

  <button type="submit">Search</button>

</form>