<form action="<%= reviews_url %>" method="post" >
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">
     
  <input type="hidden" 
    name="review[reviewable_id]" 
    value="<%= reviewable_id %>">

  <input type="hidden"
    name="review[reviewable_type]"
    value="<%= reviewable_type %>">
    
  <label for="body">
    Review
    <textarea name="review[body]" id="body"></textarea>
  </label>
  
  <label for="score">
    Score
    <input type="range" name="review[score]" id="score" min="1" max="5">
  </label>
  
  <input type="submit" value="Submit">
</form>